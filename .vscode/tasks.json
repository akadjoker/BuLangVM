{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run BuLang Script",
            "type": "shell",
            "command": "${workspaceFolder}/bin/natives",
            "args": ["${file}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build BuLangVM",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
