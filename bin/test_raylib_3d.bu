// Test raylib 3D functions
 

require "raylib";
import raylib;
using raylib;

// Colors
var white = Color(245, 245, 245, 255);
var red = Color(230, 41, 55, 255);
var green = Color(0, 228, 48, 255);
var blue = Color(0, 121, 241, 255);
var gray = Color(130, 130, 130, 255);
var darkGray = Color(80, 80, 80, 255);

// Initialize
InitWindow(800, 600, "BuLang Raylib 3D Test");
SetTargetFPS(60);

// Create camera
var camera = CreateCamera3D();
SetCamera3DPosition(camera, 10.0, 10.0, 10.0);
SetCamera3DTarget(camera, 0.0, 0.0, 0.0);
SetCamera3DFovy(camera, 45.0);

 

var frameCount = 0;
while (!WindowShouldClose()  )
{
    // Update camera
    UpdateCamera(camera, CAMERA_ORBITAL);

    BeginDrawing();
    ClearBackground(white);

    BeginMode3D(camera);

    // Draw grid
    DrawGrid(10, 1.0);

    // Draw 3D shapes
    DrawCube(0.0, 0.5, 0.0, 1.0, 1.0, 1.0, red);
    DrawCubeWires(0.0, 0.5, 0.0, 1.0, 1.0, 1.0, darkGray);

    DrawSphere(3.0, 0.5, 0.0, 0.5, green);

    DrawCylinder(-3.0, 0.0, 0.0, 0.0, 0.5, 1.0, 8, blue);

    EndMode3D();

    DrawText("Raylib 3D Test", 10, 10, 20, darkGray);
    DrawFPS(10, 40);

    EndDrawing();
    frameCount = frameCount + 1;
}

DestroyCamera3D(camera);
CloseWindow();

 
