import file;

// Criar novo ficheiro
var f = file.open("data.bin", "w");
file.write_int(f, 42);
file.close(f);

// Ler ficheiro existente
var f = file.open("data.bin", "r");
var num = file.read_int(f);
print(num);
file.close(f);

// Read/Write
var f = file.open("data.bin", "rw");
var num = file.read_int(f);
file.seek(f, 0);   
file.write_int(f, num + 1);
file.close(f);


var f = file.open("data.bin", "r");
var num = file.read_int(f);
print(num);
file.close(f);
