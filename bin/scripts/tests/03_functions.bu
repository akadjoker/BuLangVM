print("--- TEST 03: Functions ---");

var globalVal = 100;

def soma(a, b)
{
    return a + b;
}

def escopo_teste(val)
{
    var globalVal = val; // Shadowing
    return globalVal;
}

def factorial(n)
{
    if (n <= 1) return 1;
    return n * factorial(n - 1);
}

// Testes
assert_eq(soma(10, 20), 30, "Simple function return");
assert_eq(escopo_teste(50), 50, "Local scope shadowing");
assert_eq(globalVal, 100, "Global var remains unchanged");
assert_eq(factorial(5), 120, "Recursion (factorial)");

pass("03_functions.bu completed");