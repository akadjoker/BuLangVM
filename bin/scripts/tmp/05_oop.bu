print("--- TEST 05: OOP ---");

class Animal
{
    var nome;
    
    def init(n)
    {
        self.nome = n;
    }

    def som()
    {
        return "nada";
    }
}

class Cao : Animal
{
    def init(n)
    {
        super.init(n);
    }
    def som()
    {
        return "au au";
    }
    
    def getNome()
    {
        return self.nome;
    }
}

// Instanciação
var bicho = Animal("Rex");
assert_eq(bicho.nome, "Rex", "Field access");
assert_eq(bicho.som(), "nada", "Base method");

// Herança
var cao = Cao("Boby");
assert_eq(cao.getNome(), "Boby", "Inherited field in subclass");
assert_eq(cao.som(), "au au", "Method override");

// State change
cao.nome = "Max";
assert_eq(cao.getNome(), "Max", "Field modification");

pass("05_oop.bu completed");